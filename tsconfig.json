{
  "compilerOptions": {
    "target": "ES6",
    "module": "ESNext",
    "jsx": "react-jsx",
    "strict": true,
    "baseUrl": "./src",
    "paths": {
      "@components/*": ["components/*"]
    },
    "types": ["jest", "@testing-library/jest-dom"],
    "moduleResolution": "node",
    "esModuleInterop": true
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/**/*.stories.tsx"
  ],
  "exclude": [
    "node_modules",
    "build"
  ]
}
