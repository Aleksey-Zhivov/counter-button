@import './global.styl'

.button
    display flex
    align-items center
    justify-content center
    padding 8px 16px
    border none
    border-radius 8px
    font-family 'Roboto', sans-serif
    font-size 16px
    font-weight $font-weight-medium
    cursor pointer
    position relative
    transition all 0.3s ease

    &.primary
        background $color-primary
        color $color-text-primary

        &::before
            content ""
            position absolute
            top 0
            left 0
            width 0
            height 100%
            background $color-text-primary
            opacity 0.1
            transition width 0.3s ease-in-out
            z-index 0

        &:hover::before
            width 100%

    &.secondary
        background $color-secondary
        color $color-text-secondary

        &::before
            content ""
            position absolute
            top 0
            left 0
            width 0
            height 100%
            background $color-text-secondary
            opacity 0.1
            transition width 0.3s ease-in-out
            z-index 0

        &:hover::before
            width 100%

    &.size-28
        font-size $loader-size-28
        padding 6px 10px
        
        .button-label
            margin-right 4px
        
        .loader
            width $loader-size-28
            height $loader-size-28

    &.size-36
        font-size $loader-size-36
        padding 8px 12px
        
        .button-label
            margin-right 6px
        
        .loader
            width $loader-size-36
            height $loader-size-36

    &.size-56
        font-size $loader-size-56
        padding 16px
        
        .button-label
            margin-right 8px
        
        .loader
            width $loader-size-56
            height $loader-size-56

    &:active
        transform scale(0.95)

    &.loading
        .button-label, .counter
            opacity 0

.button-label
    margin-right 8px
    white-space nowrap
    overflow hidden
    text-overflow ellipsis

.loader
    position absolute
    width 24px
    height 24px
    border 2px solid $color-text-primary
    border-top-color transparent
    border-radius 50%
    animation spin 1s linear infinite

    .button.secondary &
        border-color $color-text-secondary
        border-top-color transparent

@keyframes spin
    from
        transform rotate(0deg)
    to
        transform rotate(360deg)
