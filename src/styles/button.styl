.button
    display inline-flex
    align-items center
    justify-content center
    padding 8px 16px
    border-radius 8px
    font-family 'Roboto', sans-serif
    font-size 16px
    font-weight 500
    cursor pointer
    position relative
    transition all 0.3s ease

    &.primary
        background rgba(255, 87, 34, 1)
        color white

    &.secondary
        background rgba(46, 47, 51, 0.12)
        color rgba(46, 47, 51, 1)

    &.disabled
        background rgba(46, 47, 51, 0.36)
        color rgba(255, 255, 255, 0.6)
        cursor not-allowed

    &:hover:not(.disabled)
        background rgba(255, 87, 34, 0.9)

    &:active:not(.disabled)
        background rgba(255, 87, 34, 0.8)
        transform scale(0.95)

    &.loading
        .button-label, .counter
            opacity 0

.button-label
    margin-right 8px
    white-space nowrap
    overflow hidden
    text-overflow ellipsis

.loader
    position absolute
    width 24px
    height 24px
    border 3px solid rgba(255, 255, 255, 0.3)
    border-top-color white
    border-radius 50%
    animation spin 1s linear infinite

@keyframes spin
    from
        transform rotate(0deg)
    to
        transform rotate(360deg)
