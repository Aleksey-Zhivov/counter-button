@import './global.styl'

.counter
  display flex
  align-items center
  justify-content center
  font-weight $font-weight-medium
  border none
  border-radius 50%
  text-align center
  box-sizing border-box

.primary
  background $counter-background-primary
  color $color-text-primary

.secondary
  background $counter-background-secondary
  color $color-text-secondary

.size-24
  min-width 24px
  min-height 24px
  padding 0 6px
  font-size 15px

.size-20
  min-width 20px
  min-height 20px
  padding 0 4px
  font-size 13px

.size-16
  min-width 16px
  min-height 16px
  padding 0 4px
  font-size 11px

.size-12
  width 12px
  height 12px
  font-size 8px

.size-8
  width 8px
  height 8px
