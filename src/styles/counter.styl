.counter
  display inline-flex
  align-items center
  justify-content center
  font-weight bold
  border-radius 50%
  text-align center
  box-sizing border-box

.primary
  background rgba(47, 182, 117, 1)
  color rgba(255, 255, 255, 1)

.secondary
  background rgba(131, 102, 86, 0.12)
  color rgba(46, 47, 51, 1)

.size-24
  min-width 24px
  min-height 24px
  padding 0 6px
  font-size 15px

.size-20
  min-width 20px
  min-height 20px
  padding 0 4px
  font-size 13px

.size-16
  min-width 16px
  min-height 16px
  padding 0 4px
  font-size 11px

.size-12
  width 12px
  height 12px
  font-size 8px

.size-8
  width 8px
  height 8px
